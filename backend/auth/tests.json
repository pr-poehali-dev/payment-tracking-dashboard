{
  "tests": [
    {
      "name": "Register new user",
      "method": "POST",
      "body": {
        "action": "register",
        "name": "Test User",
        "email": "test@example.com",
        "password": "password123"
      },
      "expectedStatus": 201,
      "expectedBody": {
        "user": {
          "name": "string",
          "email": "string"
        },
        "token": "string",
        "message": "string"
      },
      "bodyMatcher": "partial"
    },
    {
      "name": "Login existing user",
      "method": "POST",
      "body": {
        "action": "login",
        "email": "admin@example.com",
        "password": "admin123"
      },
      "expectedStatus": 200,
      "expectedBody": {
        "user": {
          "name": "string",
          "email": "string"
        },
        "token": "string"
      },
      "bodyMatcher": "partial"
    },
    {
      "name": "Login with invalid credentials",
      "method": "POST",
      "body": {
        "action": "login",
        "email": "wrong@example.com",
        "password": "wrongpass"
      },
      "expectedStatus": 401,
      "expectedBody": {
        "error": "string"
      },
      "bodyMatcher": "partial"
    }
  ]
}